<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/related_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Читать далее"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:id="@+id/related_navigation"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/if_arrow_left"/>

            <TextView
                android:id="@+id/related_nav_prev"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="@string/test_text"
                android:maxLines="4"
                android:ellipsize="end"/>
            <View
                android:layout_marginLeft="6dp"
                android:layout_marginRight="12dp"
                android:layout_width="1dp"
                android:background="@color/colorBlack"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="6dp" />

            <TextView
                android:id="@+id/related_nav_next"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:ellipsize="end"
                android:text="@string/test_text"/>
            <ImageView
                android:layout_width="30dp"

                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/if_arrow_right"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Вам может понравиться"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:id="@+id/related_list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:layout_margin="30dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/if_home"/>
        <TextView
            android:id="@+id/home_button"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:text="На главную"
            android:layout_marginStart="24dp"
            android:onClick="homeAction"/>
    </LinearLayout>


</LinearLayout>